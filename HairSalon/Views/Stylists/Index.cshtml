@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Stylist list!</h1>

@if (@Model.Count == 0)
{
  <h4>No stylists added! So...add some!</h4>
}

<ul>
  @foreach (Stylist stylist in Model)
  {
    <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</li>
  }
</ul>

<p>@Html.ActionLink("New stylist to add?", "Create")</p>
<p>@Html.ActionLink("Home", "Index")</p>