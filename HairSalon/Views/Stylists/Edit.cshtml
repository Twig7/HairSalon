@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist;

<h2>Need to change some stylists info?</h2>

<h4>How about this one: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.StylistId)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)
  @Html.LabelFor(model => model.Specialty)
  @Html.EditorFor(model => model.Specialty)

  <input type="submit" value="Change" />
}
<p>@Html.ActionLink("Back to your stylists!", "Index")</p>