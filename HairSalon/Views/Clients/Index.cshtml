@{
  Layout = "_Layout";
}
@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h2>Clients</h2>
@if (@Model.Count == 0)
{
  <h4>You need to add some clients! If you want, I mean, no pressure.</h4>
}
@foreach (Client client in Model)
{
  <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) | @client.StylistId.ToString();
  </li>
}

<p>@Html.ActionLink("Add new client?", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>