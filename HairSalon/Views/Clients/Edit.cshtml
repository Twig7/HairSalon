@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h2>Need to change stuff up?</h2>

<h4>Edit @Html.DisplayFor(model => model.Name)?</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.ClientId)
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  @Html.LabelFor(model => model.Number)
  @Html.TextBoxFor(model => model.Number)
  @Html.LabelFor(model => model.Stylist)
  @Html.DropDownList("StylistId")

  <input type="submit" value="Change" />
}
<p>@Html.ActionLink("Back to clients", "Index")</p>